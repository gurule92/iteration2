<p id="notice"><%= notice %></p>
<body style="background-color:tan;">
  <div class="container">
    <h6 role="heading">
      <strong>Name:</strong>
      <%= @item.name %>
    </h6>

    <h6 role="heading">
      <strong>Description:</strong>
      <%= @item.description %>
    </h6>

    <h6 role="heading">
      <strong>Tierlist:</strong>
      <%= @item.tierList %>
    </h6>

    <h6 role="heading">
      <strong>Tier:</strong>
      <%= @item.tier %>
    </h6>

    <h6 role="heading">
      <strong>Justification:</strong>
      <%= @item.justification %>
    </h6>

    <button type="button" class="btn btn-primary text-white" color="inherit"><%= link_to 'Edit', edit_item_path(@item), class:"nav-link" %></button> |
    <button type="button" class="btn btn-primary text-white" color="inherit"><%= link_to 'Destroy', @item, method: :delete, data: { confirm: 'Are you sure?' }, class:"nav-link" %> </button> |
    <button type="button" class="btn btn-primary text-white" color="inherit"><%= link_to 'Back', items_path, class:"nav-link" %></button>
  </div>
</body>

